{
	"name": "@poly-state/react",
	"version": "1.2.2",
	"description": "React bindings for React",
	"main": "dist/index.js",
	"repository": "https://github.com/poly-state/react.git",
	"author": "Shahriar Shojib<shahriar_shojib@hotmail.com>",
	"license": "MIT",
	"private": false,
	"files": [
		"dist"
	],
	"types": "./dist/index.d.ts",
	"devDependencies": {
		"@poly-state/poly-state": "1.1.3",
		"@swc/core": "^1.2.145",
		"@swc/jest": "^0.2.20",
		"@testing-library/jest-dom": "^5.16.2",
		"@testing-library/react": "^12.1.3",
		"@types/jest": "^27.4.1",
		"@types/react": "^17.0.39",
		"@types/react-dom": "^17.0.11",
		"@types/use-sync-external-store": "^0.0.3",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint": "^8.4.1",
		"eslint-plugin-react": "^7.29.2",
		"eslint-plugin-react-hooks": "^4.3.0",
		"jest": "^27.5.1",
		"prettier": "^2.5.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"rimraf": "^3.0.2",
		"typescript": "^4.5.5"
	},
	"peerDependencies": {
		"@poly-state/poly-state": "^1.1.3"
	},
	"scripts": {
		"build": "rimraf dist && tsc",
		"format": "prettier -c -w src/**/*",
		"format:check": "prettier -c src/**/*",
		"lint": "eslint src/**/*.{ts,tsx}",
		"test": "jest",
		"ci": "yarn --frozen-lockfile"
	},
	"jest": {
		"transform": {
			"^.+\\.(t|j)sx?$": [
				"@swc/jest",
				{
					"jsc": {
						"parser": {
							"syntax": "typescript",
							"tsx": true
						},
						"transform": {
							"react": {
								"runtime": "automatic"
							}
						}
					},
					"module": {
						"type": "commonjs"
					}
				}
			]
		},
		"testRegex": "src/___tests___/.*\\.spec\\.tsx?$",
		"testEnvironment": "jsdom"
	},
	"dependencies": {
		"use-sync-external-store": "^1.0.0-rc.0"
	}
}
