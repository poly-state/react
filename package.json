{
	"name": "@poly-state/react",
	"version": "1.1.4",
	"description": "React bindings for React",
	"main": "dist/index.js",
	"repository": "https://github.com/poly-state/react.git",
	"author": "Shahriar Shojib<shahriar_shojib@hotmail.com>",
	"license": "MIT",
	"private": false,
	"files": [
		"dist"
	],
	"types": "./dist/index.d.ts",
	"devDependencies": {
		"@poly-state/poly-state": "^1.1.0",
		"@swc/core": "^1.2.145",
		"@swc/jest": "^0.2.20",
		"@testing-library/jest-dom": "^5.16.2",
		"@testing-library/react": "^12.1.3",
		"@types/jest": "^27.4.1",
		"@types/react": "^17.0.39",
		"@types/react-dom": "^17.0.11",
		"cross-env": "^7.0.3",
		"eslint": "^8.4.1",
		"eslint-plugin-react-hooks": "^4.3.0",
		"jest": "^27.5.1",
		"prettier": "^2.5.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.1.3",
		"typescript": "^4.5.4"
	},
	"peerDependencies": {
		"@poly-state/poly-state": "^1.1.0"
	},
	"scripts": {
		"build": "rimraf dist && tsc",
		"format": "prettier -c -w src/**/*",
		"format:check": "prettier -c src/**/*",
		"lint": "eslint src/**/*.{ts,tsx}",
		"test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
		"ci": "yarn --frozen-lockfile"
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "src/___tests___/.*\\.spec\\.tsx?$",
		"testEnvironment": "jsdom",
		"extensionsToTreatAsEsm": [
			".ts",
			".tsx"
		]
	},
	"type": "module"
}
